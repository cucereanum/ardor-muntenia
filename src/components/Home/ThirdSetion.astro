<script is:inline>
  const homeContainer3 = document.getElementById("home3");
  const scrollContainer3 = document.querySelector(".scroll-container3");
  homeContainer3.addEventListener("mouseenter", () => {
    setTimeout(() => {
      scrollContainer3.scrollTo({
        left:
          scrollContainer3.scrollWidth / 2 - scrollContainer3.clientWidth / 2,
        behavior: "smooth",
      });
    }, 1000);
  });
</script>

<style>
  .home-container {
    background-image: url("../../images/home-section-3-dark.png");
    background-repeat: no-repeat;
    background-size: cover;
    /* background-position: center; */
    height: 84em;
    min-height: 65em;
    align-items: center;
    text-align: center;
  }
  .scroll-container3 {
    display: flex;
    overflow-x: scroll;
    overflow-y: hidden;
    padding-bottom: 1em;
  }
  h1 {
    color: #fff;
    font-size: 2.4rem;
    margin: 0;
    padding-top: 1em;
  }

  h4.subheading {
    color: #adadad;
    font-size: 1.1rem;
    padding: 0 3em;
    line-height: 1.4em;
  }

  .icon {
    margin-top: 6em;
  }
  .box-container {
    position: relative;
    display: inline-block;
    margin: 0 10px;
  }
  .box-content {
    border-radius: 0.5em;
    border: 1px solid #6b6f8a;
    height: 50em;
    margin: auto;
    margin-top: 5em;
    display: flex;
    flex-direction: column;
    width: 30em;
  }

  h2.heading {
    color: #d1d2db;
    font-size: 2rem;
    margin: 0.4em 0.5em 0.4em 0.5em;
  }
  h4.description {
    color: #adadad;
    font-size: 1.1rem;
    line-height: 1.4em;
    margin-top: 0.5em;
    padding: 0 2em;
  }

  .box-button {
    position: absolute;
    bottom: 2em;
    left: 20%;
    align-items: center;
    border-radius: 0.5em;
    border: 1px solid #6b6f8a;
    display: flex;
    flex-direction: row;
    height: 4em;
    padding: 0.2em 1.2em;
    margin: 4em auto 0 auto;
    width: 15em;
    transition: all 0.2s ease-in;
    cursor: pointer;
  }
  .box-button:hover {
    background-color: #25262d;
  }
  h4 {
    color: #d1d2db;
    font-size: 1.1rem;
    padding-right: 0.6em;
  }
  .scroll-container3::-webkit-scrollbar {
    width: 12px;
  }
  .scroll-container3::-webkit-scrollbar * {
    background: transparent;
  }

  .scroll-container3::-webkit-scrollbar-thumb {
    background: rgba(57, 55, 55, 0.8) !important;
    border-radius: 20px;
  }
  @media only screen and (min-width: 680px) {
    .box-content {
      width: 34em;
    }
    .box-button {
      left: 24%;
    }
    h4.subheading {
      padding: 0 5em;
      font-size: 1.5rem;
    }
    h4.description {
      font-size: 1.2rem;
    }
    h2.heading {
      color: #d1d2db;
      font-size: 1.7rem;
    }
    h1 {
      font-size: 2.8rem;
    }
  }
  @media only screen and (min-width: 1024px) {
    .home-container {
      z-index: 2;
      display: flex;
      flex: 1;
      height: 80vh;
      position: relative;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      background-image: url("../../images/home-section-3.png");
      background-position: center;
    }
    .home-container h1 {
      display: none;
    }
    .subheading {
      display: none;
    }
    .box-container {
      display: none;
    }
    .scroll-container3 {
      display: none;
    }
    .home-container:hover {
      flex-grow: 5;
      background-image: url("../../images/home-section-3-dark.png");
      background-position: 0 20%;
      transition: all 1s ease-in;
    }

    .home-container:hover .title {
      display: block;
      position: absolute;
      top: 0;
      opacity: 0;
      animation: onDisplay 0s 1s forwards;
    }

    .home-container:hover .subheading {
      display: block;
      position: absolute;
      top: 4.5em;
      opacity: 0;
      animation: onDisplay 0s 1s forwards;
    }

    .home-container:hover .scroll-container3 {
      display: flex;
    }
    .home-container:hover .box-container {
      display: inline-block;
      opacity: 0;
      margin-right: 3em;
      margin-left: 3em;
      animation: onDisplay 0s 1s forwards;
    }
    .box-content {
      width: 38em;
      margin-top: 20em;
    }
    @keyframes onDisplay {
      to {
        opacity: 1;
      }
    }
  }
</style>
